<Window x:Class="TPA_Desktop_NT20_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TPA_Desktop_NT20_2"
        mc:Ignorable="d"
        Title="Kong Bu Bank Authentication" Height="450" Width="500" 
        xmlns:vw="clr-namespace:TPA_Desktop_NT20_2.Views">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <ContentControl Content="{Binding SelectedViewModel}" />

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Margin="10" Width="200" Content="Customer" Command="{Binding ChangeViewCommand}" CommandParameter="CustomerAuthentication"/>
            <Button Margin="10" Width="200" Content="Employee" Command="{Binding ChangeViewCommand}" CommandParameter="EmployeeAuthentication"/>
        </StackPanel>
    </Grid>
</Window>
